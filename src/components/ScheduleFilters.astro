---
// Define all filter options from original HTML
const sessionTypes = ['keynote', 'workshop', 'talk', 'panel', 'presentation', 'networking']
const sessionTracks = ['keynote', 'ai-tech', 'mobile-dev', 'cloud-arch', 'ux-design', 'networking']  
const sessionRooms = ['main-auditorium', 'workshop-a', 'conference-b', 'main-lobby', 'garden-terrace', 'rooftop-terrace']

// Display names for better formatting
const typeLabels = {
  'keynote': 'Keynotes',
  'workshop': 'Workshops', 
  'talk': 'Talks',
  'panel': 'Panels',
  'presentation': 'Presentations',
  'networking': 'Networking'
}

const trackLabels = {
  'keynote': 'Keynotes',
  'ai-tech': 'AI & Technology',
  'mobile-dev': 'Mobile Development', 
  'cloud-arch': 'Cloud Architecture',
  'ux-design': 'UX Design',
  'networking': 'Networking'
}

const roomLabels = {
  'main-auditorium': 'Main Auditorium',
  'workshop-a': 'Workshop Room A',
  'conference-b': 'Conference Room B', 
  'main-lobby': 'Main Lobby',
  'garden-terrace': 'Garden Terrace',
  'rooftop-terrace': 'Rooftop Terrace'
}
---

<div class="filters-container">
	<div class="filters-toggle" onclick="toggleFilters()">
		Filters
	</div>
	<div class="filters-content" id="filters-content">
		<div class="filter-section">
			<div class="filter-label">Session Type:</div>
			<div class="filter-options">
				{sessionTypes.map(type => (
					<label class="filter-checkbox">
						<input type="checkbox" data-filter="type" value={type} checked>
						{typeLabels[type]}
					</label>
				))}
			</div>
		</div>

		<div class="filter-section">
			<div class="filter-label">Track:</div>
			<div class="filter-options">
				{sessionTracks.map(track => (
					<label class="filter-checkbox">
						<input type="checkbox" data-filter="track" value={track} checked>
						{trackLabels[track]}
					</label>
				))}
			</div>
		</div>

		<div class="filter-section">
			<div class="filter-label">Room:</div>
			<div class="filter-options">
				{sessionRooms.map(room => (
					<label class="filter-checkbox">
						<input type="checkbox" data-filter="room" value={room} checked>
						{roomLabels[room]}
					</label>
				))}
			</div>
		</div>
	</div>
</div>

<style>
	.filters-container {
		margin-bottom: 12px;
	}

	.filters-toggle {
		padding: 8px 12px;
		border: 1px solid black;
		background: white;
		cursor: pointer;
		font-weight: bold;
		margin-bottom: 12px;
	}

	.filters-toggle:after {
		content: "â–¼";
		float: right;
		font-size: 0.8em;
		transition: transform 0.2s;
	}

	.filters-toggle.expanded:after {
		transform: rotate(180deg);
	}

	.filters-content {
		display: none;
		padding-bottom: 12px;
		border-bottom: 1px solid black;
		margin-bottom: 12px;
	}

	.filters-content.show {
		display: block;
	}

	.filter-section {
		margin-bottom: 16px;
	}

	.filter-section:last-child {
		margin-bottom: 0;
	}

	.filter-label {
		font-weight: bold;
		margin-bottom: 8px;
		font-size: 0.9em;
	}

	.filter-options {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
	}

	.filter-checkbox {
		display: flex;
		align-items: center;
		cursor: pointer;
		padding: 4px 8px;
		border: 1px solid black;
		background: white;
		font-size: 0.8em;
	}

	.filter-checkbox input[type="checkbox"] {
		margin-right: 6px;
	}

	.filter-checkbox.selected {
		background: black;
		color: white;
	}
</style>